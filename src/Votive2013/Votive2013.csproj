      </VSIXSourceItem>
      <VSIXSourceItem Include="@(_ItemTemplates)">
        <VSIXSubPath>ItemTemplates\%(RecursiveDir)</VSIXSubPath>
      </VSIXSourceItem>
    </ItemGroup>
  </Target>

